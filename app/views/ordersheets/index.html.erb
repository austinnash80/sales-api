<p id="notice"><%= notice %></p>

<h1>Ordersheets</h1>

<div class="row">
  <div class="col-md-3">
    <input class="form-control" id="myInput" type="text" placeholder="Search Datasheet">
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Uid</th>
      <th>License</th>
      <th>Product 1</th>
      <th>Product 2</th>
      <th>Order total</th>
      <th>Pur date</th>
      <th>F name</th>
      <th>L name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @ordersheets.each do |ordersheet| %>
      <tr>
        <td><%= ordersheet.uid %></td>
        <td><%= ordersheet.license %></td>
        <td><%= ordersheet.product_1 %></td>
        <td><%= ordersheet.product_2 %></td>
        <td><%= ordersheet.order_total %></td>
        <td><%= ordersheet.pur_date %></td>
        <td><%= ordersheet.f_name %></td>
        <td><%= ordersheet.l_name %></td>
        <td><%= ordersheet.address_1 %></td>
        <td><%= ordersheet.address_2 %></td>
        <td><%= ordersheet.city %></td>
        <td><%= ordersheet.state %></td>
        <td><%= ordersheet.zip %></td>
        <td><%= ordersheet.email %></td>
        <td><%= link_to 'Show', ordersheet %></td>
        <td><%= link_to 'Edit', edit_ordersheet_path(ordersheet) %></td>
        <td><%= link_to 'Destroy', ordersheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ordersheet', new_ordersheet_path %>

<h3>Upload CSV File</h3>
  <%= form_tag import_ordersheets_path, multipart: true do %>
  <%= file_field_tag :file %>
</br>
  <%= submit_tag 'Upload', class: 'btn btn-primary' %>
<% end %>
